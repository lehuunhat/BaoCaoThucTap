@model HienTangToc.Models.NguoihienModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng ký Hiến tóc";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chart.js Example</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/site.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<form method="post" asp-action="Hientoc" asp-controller="From">
    <h2>Đăng Ký Người Hiến Tóc</h2>
    <div>
        <label for="Hoten">Họ Tên:</label>
        <input type="text" id="Hoten" name="Hoten" required />
        <span asp-validation-for="Hoten"></span>
    </div>
    <div>
        <label for="Sdt">Số Điện Thoại:</label>
        <input type="text" id="Sdt" name="Sdt" required />
        <span asp-validation-for="Sdt"></span>
    </div>
    <div>
        <label for="Diachi">Địa Chỉ:</label>
        <input type="text" id="Diachi" name="Diachi" required />
        <span asp-validation-for="Diachi"></span>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" required />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="Gioitinh">Giới Tính:</label>
        <select class="form-control" id="Gioitinh" name="Gioitinh" required>
            <option value="0">Nam</option>
            <option value="1">Nữ</option>
        </select>
        <span asp-validation-for="Gioitinh"></span>
    </div>
    <div>
        <label for="Ngayhien">Ngày Hiến:</label>
        <input type="date" id="Ngayhien" name="Ngayhien" required />
        <span asp-validation-for="Ngayhien"></span>
    </div>
    <button type="submit">Đăng Ký</button>
</form>

